#!/bin/bash -e
#
# Docker command wrapper for Cygwin with Docker Toolbox
#

function dmpath ()
{
	cygpath -am "$1" | sed -E 's|^(\w*):|/\L\1|'
}

cmd=(docker "$@")
sshopt=""

case "$1" in
	"build" | "import")
		if [[ -e "${cmd[$#]}" ]]; then
			cmd[$#]=$(dmpath "${cmd[$#]}")
		fi
		;;
	"cp")
		cmd=(docker cp)
		shift
		while [[ $# -gt 0 ]]; do
			case "$1" in
				-* | *:*) cmd=("${cmd[@]}" "$1") ;;
				*) cmd=("${cmd[@]}" "$(dmpath "$1")") ;;
			esac
			shift;
		done
		;;
	"exec")
		cmd=(docker exec)
		shift
		while [[ $# -gt 0 ]]; do
			cmd=("${cmd[@]}" "$1")
			if [[ "$1" =~ ^-[^-]*t.*$ || "$1" == "--tty" ]]; then
				sshopt="$sshopt -t"
			fi
			shift
		done
		;;
	"export" | "save")
		cmd=(docker "$1")
		shift
		while [[ $# -gt 0 ]]; do
			cmd=("${cmd[@]}" "$1")
			if [[ "$1" = "-o" || "$1" = "--output" ]]; then
				cmd=("${cmd[@]}" "$(dmpath "$2")")
				shift
			fi
			shift
		done
		;;
	"run")
		cmd=(docker run)
		shift
		while [[ $# -gt 0 ]]; do
			cmd=("${cmd[@]}" "$1")
			if [[ "$1" =~ ^-[^-]*t.*$ || "$1" = "--tty" ]]; then
				sshopt="$sshopt -t"
			fi
			if [[ "$1" =~ ^-[^-]*v$ || "$1" = "--volume" ]]; then
				cmd=("${cmd[@]}" "$(dmpath "${2%:*}"):${2#*:}")
				shift
			fi
			shift
		done
		;;
esac


INSPECT=$(docker-machine inspect)
SSHKEY=$(echo $INSPECT | grep -Po '"SSHKeyPath":\s*"\K[^"]*(?=",)' | sed -E 's|^(\w+):|/cygdrive/\L\1|;s|\\\\|/|g')
VMADDR=$(echo $INSPECT | grep -Po '"IPAddress":\s*"\K[^"]*(?=",)')

ssh $sshopt -q -i $SSHKEY docker@$VMADDR "${cmd[@]}"
